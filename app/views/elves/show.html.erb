          <p><i class="fas fa-bolt"></i> <%= @elf.powers %></p>
          <p><i class="fas fa-map-marker"></i> <%= @elf.location %></p>
          <p><i class="fas fa-euro-sign"></i> <%= @elf.price_per_day %>€ / jour</p>
        </div>
      </div>
      <p class="btn-reserver"><%= link_to 'Réservez', "#",  class: "btn btn-primary" %></p>
    </div>

