<h1><strong><%= @elf.name %></strong> details</h1>

<div class= "container-elf-show">
  <div class="card-elf">
    <%= cl_image_tag @elf.photo.key, height: 300, width: 400, crop: :fill %>
    <div class="card-elf-infos">
      <h2><%= @elf.name %></h2>
      <p><%= @elf.description %></p>
      <p><h3>Spécialité :</h3> <%= @elf.specialty %></p>
      <p><h3>Pouvoirs :</h3> <%= @elf.powers %></p>
      <p><h3>Adresse :</h3> <%= @elf.location %></p>
      <h3>Prix : <%= @elf.price_per_day %></h3>€ / jour
    </div>
  </div>

</div>

<%= link_to "Back to elves list", elves_path, class: "btn btn-primary" %>
